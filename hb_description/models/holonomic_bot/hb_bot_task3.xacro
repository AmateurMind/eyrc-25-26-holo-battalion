<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hb_bot_task3">
    
    <!-- ============================================== -->
    <!-- TASK 3 HOLONOMIC BOT WITH ARM/GRIPPER SYSTEM   -->
    <!-- ============================================== -->
    
    <!-- Cylinder Inertia: Ixx = Iyy = m*(3r² + h²)/12, Izz = m*r²/2 -->
    <xacro:macro name="cylinder_inertia" params="m r h">
        <inertia
        ixx="${m*(3*r*r + h*h)/12}" ixy="0"    ixz="0"
        iyy="${m*(3*r*r + h*h)/12}" iyz="0"
        izz="${m*r*r/2}" />
    </xacro:macro>

    <!-- Box Inertia: Ixx = m*(y²+z²)/12, Iyy = m*(x²+z²)/12, Izz = m*(x²+y²)/12 -->
    <xacro:macro name="box_inertia" params="m x y z">
        <inertia
        ixx="${m*(y*y + z*z)/12}" ixy="0"    ixz="0"
        iyy="${m*(x*x + z*z)/12}" iyz="0"
        izz="${m*(x*x + y*y)/12}" />
    </xacro:macro>

    <!-- ============================================== -->
    <!-- ROLLER MACRO FOR OMNI-WHEELS                   -->
    <!-- ============================================== -->
    <xacro:macro name="roller_macro" params="parent name xyz rpy">
        <link name="roller_${name}_rim_${parent}_link">
        <inertial>
            <mass value="0.00113845"/>
            <inertia ixx="2.53776e-08" ixy="0" ixz="0" iyy="2.53776e-08" iyz="0" izz="1.47666e-08"/>
        </inertial>
        <visual>
            <geometry>
            <mesh filename="file://$(find hb_description)/models/holonomic_bot/meshes/roller.stl"/>
            </geometry>
            <material name="roller_material">
            <color rgba="0.1 0.1 0.1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
            <mesh filename="file://$(find hb_description)/models/holonomic_bot/meshes/roller.stl"/>
            </geometry>
        </collision>
        </link>
        <joint name="roller_${name}_rim_${parent}_joint" type="continuous">
        <parent link="rim_${parent}_link"/>
        <child link="roller_${name}_rim_${parent}_link"/>
        <axis xyz="0 0 1"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
        </joint>
    </xacro:macro>

    <!-- ============================================== -->
    <!-- RIM MACRO FOR OMNI-WHEELS                      -->
    <!-- ============================================== -->
    <xacro:macro name="rim_macro" params="name color xyz rpy">
        <link name="rim_${name}_link">
        <inertial>
            <origin xyz="0 0 -0.000343"/>
            <mass value="0.00835758"/>
            <inertia ixx="6.63684e-07" ixy="0" ixz="0" iyy="6.63684e-07" iyz="0" izz="9.40333e-07"/>
        </inertial>
        <visual>
            <geometry>
            <mesh filename="file://$(find hb_description)/models/holonomic_bot/meshes/rim.stl"/>
            </geometry>
            <material name="rim_${name}_material">
            <color rgba="${color} 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
            <mesh filename="file://$(find hb_description)/models/holonomic_bot/meshes/rim.stl"/>
            </geometry>
        </collision>
        </link>
        <joint name="rim_${name}_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rim_${name}_link"/>
        <axis xyz="0 0 1"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
        </joint>

        <!-- 8 rollers around the rim -->
        <xacro:roller_macro parent="${name}" name="e"  xyz="0.01355 0 0.0055"                rpy="-1.570796326794896 0 0"/>
        <xacro:roller_macro parent="${name}" name="ne" xyz="0.00958129689 0.00958129689 -0.0055" rpy="-1.570796326794896 0 0.7853981633974483"/>
        <xacro:roller_macro parent="${name}" name="n"  xyz="0 0.01355 0.0055"                rpy="-1.570796326794896 0 1.570796326794896"/>
        <xacro:roller_macro parent="${name}" name="nw" xyz="-0.00958129689 0.00958129689 -0.0055" rpy="-1.570796326794896 0 2.356194490192345"/>
        <xacro:roller_macro parent="${name}" name="w"  xyz="-0.01355 0 0.0055"               rpy="-1.570796326794896 0 3.141592653589793"/>
        <xacro:roller_macro parent="${name}" name="sw" xyz="-0.00958129689 -0.00958129689 -0.0055" rpy="-1.570796326794896 0 -2.356194490192345"/>
        <xacro:roller_macro parent="${name}" name="s"  xyz="0 -0.01355 0.0055"               rpy="-1.570796326794896 0 -1.570796326794896"/>
        <xacro:roller_macro parent="${name}" name="se" xyz="0.00958129689 -0.00958129689 -0.0055" rpy="-1.570796326794896 0 -0.7853981633974483"/>
    </xacro:macro>

    <!-- ============================================== -->
    <!-- ROBOT BASE STRUCTURE                           -->
    <!-- ============================================== -->
    
    <!-- Root link -->
    <link name="footprint_link">
    </link>

    <joint name="footprint_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="footprint_link"/>
        <child link="base_link"/>
    </joint>

    <!-- Base Link (Main chassis) -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="file://$(find hb_description)/models/holonomic_bot/meshes/bot.dae"/>
            </geometry>
        </visual>

        <collision name="base_link_collision">
            <origin xyz="0 0 0.026" rpy="0 0 0" />
            <geometry>
                <mesh filename="file://$(find hb_description)/models/holonomic_bot/meshes/bot.dae"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.15" />
            <xacro:cylinder_inertia m="0.3" r="0.074" h="0.03"/>
        </inertial>
    </link>

    <!-- Three omni wheels (left, back, right) -->
    <xacro:rim_macro name="left"  color="0.3 0 0"   xyz="-0.04503332099679081 0.02599999999999999 0" rpy="1.570796326794896 0 1.047197551196597"/>
    <xacro:rim_macro name="back"  color="0 0.3 0"   xyz="0 -0.052 0"              rpy="1.570796326794896 0 3.141592653589793"/>
    <xacro:rim_macro name="right" color="0 0 0.3"   xyz="0.04503332099679081 0.02599999999999999 0"  rpy="1.570796326794896 0 -1.047197551196597"/>

    <!-- ============================================== -->
    <!-- ARM/LIFTER SYSTEM FOR BOX PICKING              -->
    <!-- ============================================== -->

    <!-- Arm Base Mount (Fixed to robot base) -->
    <link name="arm_base_link">
        <visual>
            <origin xyz="0 0 0.015" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.015" length="0.03"/>
            </geometry>
            <material name="arm_base_material">
                <color rgba="0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.015" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.015" length="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.015" rpy="0 0 0"/>
            <mass value="0.02"/>
            <xacro:cylinder_inertia m="0.02" r="0.015" h="0.03"/>
        </inertial>
    </link>

    <joint name="arm_base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="arm_base_link"/>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
    </joint>

    <!-- Vertical Arm/Lifter (Prismatic joint for up/down motion) -->
    <link name="arm_vertical_link">
        <visual>
            <origin xyz="0 0 0.03" rpy="0 0 0"/>
            <geometry>
                <box size="0.02 0.02 0.06"/>
            </geometry>
            <material name="arm_vertical_material">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.03" rpy="0 0 0"/>
            <geometry>
                <box size="0.02 0.02 0.06"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.03" rpy="0 0 0"/>
            <mass value="0.015"/>
            <xacro:box_inertia m="0.015" x="0.02" y="0.02" z="0.06"/>
        </inertial>
    </link>

    <joint name="arm_lift_joint" type="prismatic">
        <parent link="arm_base_link"/>
        <child link="arm_vertical_link"/>
        <origin xyz="0 0 0.03" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="0.0" upper="0.08" effort="10" velocity="0.1"/>
        <dynamics damping="0.5" friction="0.1"/>
    </joint>

    <!-- Horizontal Arm Extension (for reaching forward) -->
    <link name="arm_horizontal_link">
        <visual>
            <origin xyz="0.04 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.08 0.015 0.015"/>
            </geometry>
            <material name="arm_horizontal_material">
                <color rgba="0.4 0.4 0.4 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.04 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.08 0.015 0.015"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.04 0 0" rpy="0 0 0"/>
            <mass value="0.01"/>
            <xacro:box_inertia m="0.01" x="0.08" y="0.015" z="0.015"/>
        </inertial>
    </link>

    <joint name="arm_extend_joint" type="prismatic">
        <parent link="arm_vertical_link"/>
        <child link="arm_horizontal_link"/>
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="0.0" upper="0.05" effort="10" velocity="0.1"/>
        <dynamics damping="0.5" friction="0.1"/>
    </joint>

    <!-- ============================================== -->
    <!-- GRIPPER SYSTEM                                  -->
    <!-- ============================================== -->

    <!-- Gripper Base -->
    <link name="gripper_base_link">
        <visual>
            <origin xyz="0 0 -0.01" rpy="0 0 0"/>
            <geometry>
                <box size="0.03 0.06 0.01"/>
            </geometry>
            <material name="gripper_base_material">
                <color rgba="0.2 0.2 0.2 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.01" rpy="0 0 0"/>
            <geometry>
                <box size="0.03 0.06 0.01"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 -0.01" rpy="0 0 0"/>
            <mass value="0.015"/>
            <xacro:box_inertia m="0.015" x="0.03" y="0.06" z="0.01"/>
        </inertial>
    </link>

    <joint name="gripper_base_joint" type="fixed">
        <parent link="arm_horizontal_link"/>
        <child link="gripper_base_link"/>
        <origin xyz="0.08 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Left Gripper Finger -->
    <link name="gripper_left_link">
        <visual>
            <origin xyz="0 0 -0.02" rpy="0 0 0"/>
            <geometry>
                <box size="0.01 0.01 0.04"/>
            </geometry>
            <material name="gripper_finger_material">
                <color rgba="0.6 0.1 0.1 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.02" rpy="0 0 0"/>
            <geometry>
                <box size="0.01 0.01 0.04"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 -0.02" rpy="0 0 0"/>
            <mass value="0.005"/>
            <xacro:box_inertia m="0.005" x="0.01" y="0.01" z="0.04"/>
        </inertial>
    </link>

    <joint name="gripper_left_joint" type="prismatic">
        <parent link="gripper_base_link"/>
        <child link="gripper_left_link"/>
        <origin xyz="0 0.025 -0.005" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-0.015" upper="0.0" effort="5" velocity="0.05"/>
        <dynamics damping="0.3" friction="0.1"/>
    </joint>

    <!-- Right Gripper Finger -->
    <link name="gripper_right_link">
        <visual>
            <origin xyz="0 0 -0.02" rpy="0 0 0"/>
            <geometry>
                <box size="0.01 0.01 0.04"/>
            </geometry>
            <material name="gripper_finger_material">
                <color rgba="0.6 0.1 0.1 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.02" rpy="0 0 0"/>
            <geometry>
                <box size="0.01 0.01 0.04"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 -0.02" rpy="0 0 0"/>
            <mass value="0.005"/>
            <xacro:box_inertia m="0.005" x="0.01" y="0.01" z="0.04"/>
        </inertial>
    </link>

    <joint name="gripper_right_joint" type="prismatic">
        <parent link="gripper_base_link"/>
        <child link="gripper_right_link"/>
        <origin xyz="0 -0.025 -0.005" rpy="0 0 0"/>
        <axis xyz="0 -1 0"/>
        <limit lower="-0.015" upper="0.0" effort="5" velocity="0.05"/>
        <dynamics damping="0.3" friction="0.1"/>
    </joint>

    <!-- ============================================== -->
    <!-- ELECTROMAGNET OPTION (Alternative to gripper)  -->
    <!-- ============================================== -->

    <!-- Electromagnet Link (attached to gripper base) -->
    <link name="electromagnet_link">
        <visual>
            <origin xyz="0 0 -0.045" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.015" length="0.01"/>
            </geometry>
            <material name="electromagnet_material">
                <color rgba="0.1 0.1 0.6 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.045" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.015" length="0.01"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 -0.045" rpy="0 0 0"/>
            <mass value="0.01"/>
            <xacro:cylinder_inertia m="0.01" r="0.015" h="0.01"/>
        </inertial>
    </link>

    <joint name="electromagnet_joint" type="fixed">
        <parent link="gripper_base_link"/>
        <child link="electromagnet_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- ============================================== -->
    <!-- ROS2 CONTROL HARDWARE INTERFACE                -->
    <!-- ============================================== -->

    <ros2_control name="GazeboSystem" type="system">
        <hardware>
        <!-- Gazebo → ros2_control bridge -->
        <plugin>gz_ros2_control/GazeboSimSystem</plugin>
        </hardware>

        <!-- Wheel Joints (Velocity Control) -->
        <joint name="rim_left_joint">
            <command_interface name="velocity"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
        <joint name="rim_right_joint">
            <command_interface name="velocity"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
        <joint name="rim_back_joint">
            <command_interface name="velocity"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <!-- Arm Lift Joint (Position Control) -->
        <joint name="arm_lift_joint">
            <command_interface name="position">
                <param name="min">0.0</param>
                <param name="max">0.08</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <!-- Arm Extension Joint (Position Control) -->
        <joint name="arm_extend_joint">
            <command_interface name="position">
                <param name="min">0.0</param>
                <param name="max">0.05</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <!-- Gripper Joints (Position Control) -->
        <joint name="gripper_left_joint">
            <command_interface name="position">
                <param name="min">-0.015</param>
                <param name="max">0.0</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
        <joint name="gripper_right_joint">
            <command_interface name="position">
                <param name="min">-0.015</param>
                <param name="max">0.0</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

    </ros2_control>

    <gazebo>
        <plugin name="gz_ros2_control::GazeboSimROS2ControlPlugin" filename="libgz_ros2_control-system.so">
            <parameters>$(find hb_description)/config/controllers_task3.yaml</parameters>
        </plugin>
    </gazebo>

    <!-- ============================================== -->
    <!-- GAZEBO MATERIALS                               -->
    <!-- ============================================== -->

    <gazebo reference="arm_base_link">
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <gazebo reference="arm_vertical_link">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="arm_horizontal_link">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="gripper_base_link">
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <gazebo reference="gripper_left_link">
        <material>Gazebo/Red</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>

    <gazebo reference="gripper_right_link">
        <material>Gazebo/Red</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>

    <gazebo reference="electromagnet_link">
        <material>Gazebo/Blue</material>
    </gazebo>

</robot>
